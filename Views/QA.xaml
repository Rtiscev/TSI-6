<UserControl x:Class="TSI_6.Views.QA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TSI_6.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContentControl x:Name="Topic">
        <Grid Background="white">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock FontSize="30" FontWeight="UltraBold" TextAlignment="Center" TextDecorations="Underline" x:Name="tName" Grid.Row="0" Grid.Column="0" Text="{Binding topicName}"></TextBlock>
            <ContentControl Grid.Row="1" x:Name="Category">
                
            </ContentControl>
            <ProgressBar Margin="0,20,0,0" x:Name="progressBar" Minimum="1" Maximum="25" Grid.Row="2"/>
        </Grid>
    </ContentControl>

</UserControl>
